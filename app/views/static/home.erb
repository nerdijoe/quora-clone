
<div class="stage">

<nav>
	<a href="/questions">My questions</a>
	<a href="/answers">My answers</a>

	<a href="/users/<%=current_user.id%>">My Profile</a>
	<a href="/logout"> Log out </a>

</nav>


<section>

<h1>Home</h1>

<p> Hello <%= current_user.fullname %>! </p>




<% if @questions.count < 1 %>
	<p>no questions...</p>
<% else %>
	<p>Top Stories:</p>

	<% @questions.each do |q| %>
		<p>
			<%= q.content %> <a href='/questions/<%= q.id %>'>details</a> <br>
			<i>posted by <%= q.user.username %> on <%= format_date(q.created_at) %></i><br>
			Votes: <div id="question_vote_count"><%= q.question_votes.count %></div>

			<% if q.question_votes.count > 0 %>
				<a href='/question_votes/<%= q.id %>'>View Upvotes</a>
			<% end %>

				<form method=post action=/question_votes/<%= q.id %>/ajax_up class='question_upvote'>
					<% if q.question_votes.where(user_id: current_user.id).count == 0 %>
						<button type=submit id='upvote<%= q.id %>' class='upvote_false'>Upvote</button>
					<% else %>
						<button type=submit id='upvote<%= q.id %>' class='upvote_true'>Upvoted</button>
					<% end %>
				</form>

				<form method=post action=/question_votes/<%= q.id %>/ajax_down class='question_downvote'>
					<input type="hidden" name=question[id] value=<%= q.id %> >
						<button type=submit >Downvote</button>
				</form>

		</p>
	<% end %>

<% end %>



</section>



</div> <!-- end of div stage -->

