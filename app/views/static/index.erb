<div class='stage_index'>

<div class='logo_container'>
	<logo><a href="/">Koalaa</a></logo>
	<logo_subtext>The best answer to any question</logo_subtext>
	<logo_gap></logo_gap>

<div class='box'>

<% if !logged_in? %>
	Login
	<form method=post action=/login>
		<input type=text placeholder="Email" name="user[email]" required><br>
		<input type=password placeholder="Password" name="user[password]" required></br>
		<!-- <input type=submit value="Login"> -->
		<button type=submit>Login</button>
	</form>

	<%if @error_messages %>
		<div class="alert_message"><p> <%=@error_messages %> </p></div>
	<% end %>
</div>

<div class='box'>
	<% if !logged_in? %>
	<!-- 		<a href="/users/new">Sign up</a>  -->

  <!-- Trigger the modal with a button -->
  <button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal">Sign Up</button>

  <!-- Modal -->
  <div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog">
    
      <!-- Modal content-->
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">Sign up</h4>
        </div>
        <div class="modal-body">
						<% if @new_user.nil?%>

						<form method=post action=/users class='user_signup'>
							<input type=text placeholder="Full Name" name="user[fullname]" required><br>
							<input type=text placeholder="Username" name="user[username]" required><br>
							<input type=text placeholder="Email" name="user[email]" required><br>
							<input type=password placeholder="Password" name="user[password]" required></br>
							<input type=submit id='signup_button' value="Sign up">
						</form>

						<% end %>

        </div>
        <div class="modal-footer">
        	<div id='signup_message'></div>
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
      </div>
      
    </div>
  </div>




	<% end %>
</div>


<% else %>
<!-- 	<p> user is logged in </p>

	<p><a href="/home">Home</a></p>
	<p>
		<a href="/questions">My questions</a> <br>
		<a href="/answers">My answers</a>
	</p>

	<p><a href="/users/<%=current_user.id%>">My Profile</a></p>
	<p><a href="/logout"> Log out </a></p>
 -->
	<% redirect to '/home' %>

<% end %>


</div>


</div> <!-- end of div stage -->
