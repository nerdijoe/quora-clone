<h1>Quora</h1>

<% if !logged_in? %>
	<a href="/users/new">Sign up</a>
<% end %>


<% if !logged_in? %>
	<h2>Login</h2>
	<form method=post action=/login>
		<input type=text placeholder="Email" name="user[email]" required><br>
		<input type=password placeholder="Password" name="user[password]" required></br>
		<input type=submit value="Login">
	</form>

	<%if @error_messages %>
		<p> <%=@error_messages %> </p>
	<% end %>


<% else %>

	<p> user is logged in </p>

	<p><a href="/home">Home</a></p>

	<p>
		<a href="/questions">My questions</a> <br>
		<a href="/answers">My answers</a>
	</p>

	<p><a href="/users/<%=current_user.id%>">My Profile</a></p>

	<p><a href="/logout"> Log out </a></p>







<% end %>
